\usepackage{fancyhdr}
\pagestyle{fancy}

% Normal Page Style - Require Two-Sided
\fancyhead[L]{}
\fancyhead[C]{}
\fancyhead[RE]{\thepage}
\fancyhead[LO]{\thepage}
\renewcommand{\headrulewidth}{0pt}
\fancyfoot[L]{}
\fancyfoot[C]{}
\fancyfoot[R]{}
\renewcommand{\footrulewidth}{0.4pt}

% Blank Style
\fancypagestyle{blank}{
\fancyhead[L]{}
\fancyhead[C]{}
\fancyhead[R]{}
\renewcommand{\headrulewidth}{0pt}
\fancyfoot[L]{}
\fancyfoot[C]{}
\fancyfoot[R]{}
\renewcommand{\footrulewidth}{0pt}
}
% Bottom Page Style
\fancypagestyle{pages}{
\fancyhead[L]{}
\fancyhead[C]{}
\fancyhead[R]{}
\renewcommand{\headrulewidth}{0pt}
\fancyfoot[L]{}
\fancyfoot[C]{}
\fancyfoot[R]{\thepage \,of \pageref*{LastPage}}
\renewcommand{\footrulewidth}{0.4pt}
}


